# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate
DB_USER=postgres
DB_PASSWORD=postgres

# Debug Settings
DB_DEBUG=false

# Webhook Notifications (optional)
WEBHOOK_URL=https://your-webhook-url.com/notify

# API Rate Limiting
API_DELAY_MS=1200
MAX_CONCURRENT_REQUESTS=3

# Scheduler Settings
ENABLE_SCHEDULER=true
FULL_SCAN_SCHEDULE="0 2 * * *"
UPDATE_CHECK_SCHEDULE="0 */4 * * *"
PRICE_MONITOR_SCHEDULE="0 */2 * * *"

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log